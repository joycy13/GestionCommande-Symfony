<form method="post" action="{{ path('statut_delete', {'id': statut.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ statut.id) }}">
    <button class="btn btn-outline-danger">
        <a style="color: #000000;">Supprimer</a>
    </button>
</form>
